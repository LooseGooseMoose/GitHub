      display: flex;
      justify-content: space-around;
      padding: 20px;
    }
    .box {
      background-color: #ddd;
      padding: 20px;
      width: 30%;
      box-shadow: 0 0 5px rgba(0,0,0,0.2);
    }
    .full-width {
      width: 60%;
    }
    .file-preview {
      width: 100%;
      height: 200px;
      background-color: #fff;
      display: flex;
      align-items: center;
      justify-content: center;
      border: 1px dashed #999;
      margin-top: 10px;
    }
